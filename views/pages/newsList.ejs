<% include ../includes/backend-head.ejs %>
<body style="overflow-x: hidden;overflow-y: hidden;background-color: #eee;">
<div class="backend-header flex-space">
    <div>
        <span class="admin"><i class="layui-icon layui-icon-set-fill" style="font-size: 18px;margin-left: -10px"></i><a
                    href="/admin">天磁信息科技管理后台</a></span>
    </div>
    <div class="flex-cc pr-40">
        <div class="user weintern-font-larger mr-20">欢迎您，<a href="javascript:;"
                                                            class="font-italic"><%= localUser.name %></a>
        </div>
        <div class="logout"><a href="/admin/user/signIn">退出</a></div>
    </div>
</div>
<div class="main">
    <div class="backend-sidebar">
        <ul class="layui-nav layui-nav-tree" lay-filter="">
            <li class="layui-nav-item">
                <a href="/admin/userList">
                    <i class="layui-icon layui-icon-user"></i>
                    <span class="ml-15">用户管理</span>
                </a>
            </li>
            <li class="layui-nav-item layui-this">
                <a href="/admin/newsList">
                    <i class="layui-icon layui-icon-release"></i>
                    <span class="ml-15">新闻列表</span>
                </a>
            </li>
            <li class="layui-nav-item">
                <a href="/admin/applyList">
                    <i class="layui-icon layui-icon-add-circle"></i>
                    <span class="ml-15">申请列表</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="backend-container">
        <div class="row pb-10" style="margin-right: 0;margin-left: 0">
            <h2 class="w100 tc">新闻列表</h2>
            <a href="/admin/news/add">
                <button class="layui-btn layui-btn-normal" style="position: absolute; right: 20px; top: 15px">
                    <i class="layui-icon layui-icon-add-circle"></i>
                    <span style="position: relative;top: -2px;">添加新闻</span>
                </button>
            </a>
        </div>
        <hr class="layui-bg-blue pt-5">
        <div class="backend-content">
            <table class="layui-table">
                <colgroup>
                    <col width="80">
                    <col width="150">
                    <col width="300">
                    <col width="150">
                </colgroup>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>新闻标题</th>
                    <th>新闻内容</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <% newsList.forEach(function (news, index) { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td class="text-over" style="max-width: 200px">
                        <%= news.title %>
                    </td>
                    <td class="text-over" style="max-width: 300px">
                        <%= news.content %>
                    </td>
                    <td>
                        <%= moment(news.meta.updateAt).format("YYYY-MM-DD") %>
                    </td>
                    <td>
                        <% if (localUser.role === 7) { %>
                        <button class="news-del layui-btn layui-btn-danger"
                                data-id="<%= news._id %>">删除<i class="layui-icon layui-icon-delete"
                                                               style="position: relative;top: 1px"></i>
                        </button>
                        <% } %>
                        <% if (localUser.role === 7) { %>
                        <a href="/admin/news/update/<%= news._id %>">
                            <button class="news-update layui-btn">更新<i class="layui-icon layui-icon-refresh"
                                                                   style="font-size: 14px"></i>
                            </button>
                        </a>
                        <% } %>
                        <% if (localUser.role === 7) { %>
                        <a href="/admin/news/detail/<%= news._id %>">
                            <button class="news-view layui-btn">查看<i class="layui-icon layui-icon-link"
                                                                   style="font-size: 14px"></i>
                            </button>
                        </a>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		layer.config({
			title: '提示'
		})
		$('.news-del').bind('click', function () {
			let newsId = $(this).data("id");
			let tr = $(this).parents("tr");
			if (newsId) {
				layer.confirm("确定删除该用户?删除后将不能恢复", {
					btn: ['确认', '取消'],
					btn1: function (index) {
						$.ajax({
							type: 'DELETE',
							url: '/admin/newsList/del?newsId=' + newsId
						}).done(function (res) {
							if (res.success === 1) {
								tr.remove();
							} else {
								layer.alert("删除失败，请重试！")
							}
							layer.close(index);
						})
					},
					btn2: function (index) {
						layer.close(index)
					}
				})
			}
		})
	})
</script>
</body>