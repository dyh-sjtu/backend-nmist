<!-- wrapper-box start -->
<div class="wrapper-box p-0">
    <!-- page-title-area start -->
    <div class="page-title-area pt-210 pb-210" data-background="https://nmist.oss-cn-hangzhou.aliyuncs.com/img/bg/page-title.jpg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page-title text-center">
                        <h1>新闻动态</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item">
                                    <span>行业</span>
                                </li>
                                <li class="breadcrumb-item">
                                    <span>天磁</span>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->

    <div class="container">
        <% news.forEach(function (item, index) { %>
        <div class="row mt-50">
            <div class="media">
                <div class="media-left media-middle tianci-data">
                    <i><%= moment(item.time).get('year') %>年<%= moment(item.time).get('month')+1 %>月</i>
                    <p><%= moment(item.time).get('date') %>日</p>
                </div>
                <div class="media-body">
                    <a href="/newsDetail?newsId=<%= item._id %>">
                        <h5 class="media-heading"><%= item.title %></h5>
                    </a>
                </div>
            </div>
        </div>
       <% }) %>
        <nav class="ow-pagination mt-50">
            <ul class="pagination tc">
                <% if (pageIndex > 0) { %>
                <li><a href="/news?pageIndex=0">首页</a></li>
                <% } %>
                <% if(pageIndex === 0) { %>
                <li class="disabled"><a href="javascript:;">上一页</a></li>
                <% } else { %>
                <li>
                    <a href="/news?pageIndex=<%= pageIndex - 1 %>">上一页</a>
                </li>
                <% } %>
                <% for(var i = 0; i < totalPage; i++) { %>
                <% if (i === pageIndex) { %>
                <li class="active"><a href="/news?pageIndex=<%= i %>"><%= i + 1 %></a></li>
                <% } else { %>
                <li><a href="/news?pageIndex=<%= i %>"><%= i + 1 %></a></li>
                <% } %>
                <% } %>
                <% if (pageIndex === totalPage - 1) { %>
                <li class="disabled"><a href="javascript:;">下一页</a></li>
                <% } else { %>
                <li><a href="/news?pageIndex=<%= pageIndex + 1 %>">下一页</a></li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>