<!-- wrapper-box start -->
<div class="wrapper-box p-0">
    <!-- page-title-area start -->
    <div class="page-title-area pt-210 pb-210" data-background="https://nmist.oss-cn-hangzhou.aliyuncs.com/img/bg/page-title.jpg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page-title text-center">
                        <h1>我们的产品</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <% products.forEach(function (product, index) { %>
                                <li class="breadcrumb-item">
                                    <span><%= product.name %></span>
                                </li>
                                <% }) %>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->

    <!-- services-area start -->
    <div class="services-area pt-115 pb-60">
        <div class="container">
            <% products.forEach(function (product, index) { %>
            <div class="row mb-100 service-wrapper-2">
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="service-box service-3">
                        <img src="<%= product.imgUrl %>" alt="<%= product.name %>">
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 flex-column-sp">
                    <div class="service-box service-3">
                        <h3>
                            <a href="/product/detail/<%= product._id %>"><%= product.name %></a>
                        </h3>
                        <p><%= product.desc %></p>
                    </div>
                    <a data-animation="fadeInLeft" data-delay="1.2s" href="/product/detail/<%= product._id %>"
                       class="service-link btn brand-btn"
                       style="animation-delay: 1.2s;">查看详情
                        <span>→</span>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>