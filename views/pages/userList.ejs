<% include ../includes/backend-head.ejs %>
<body style="overflow-x: hidden;background-color: #eee;">
<div class="backend-header flex-space">
    <div>
        <span class="admin"><i class="layui-icon layui-icon-set-fill" style="font-size: 18px;margin-left: -10px"></i><a
                    href="/admin">天磁信息科技管理后台</a></span>
    </div>
    <div class="flex-cc pr-40">
        <div class="user weintern-font-larger mr-20">欢迎您，<a href="javascript:;"
                                                            class="font-italic"><%= localUser.name %></a>
        </div>
        <div class="logout"><a href="/admin/user/signIn">退出</a></div>
    </div>
</div>
<div class="main">
    <div class="backend-sidebar">
        <ul class="layui-nav layui-nav-tree" lay-filter="">
            <li class="layui-nav-item layui-this">
                <a href="/admin/userList">
                    <i class="layui-icon layui-icon-user"></i>
                    <span class="ml-15">用户管理</span>
                </a>
            </li>
            <li class="layui-nav-item">
                <a href="/admin/newsList">
                    <i class="layui-icon layui-icon-release"></i>
                    <span class="ml-15">新闻管理</span>
                </a>
            </li>
            <li class="layui-nav-item">
                <a href="/admin/applyList">
                    <i class="layui-icon layui-icon-add-circle"></i>
                    <span class="ml-15">申请列表</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="backend-container">
        <div class="row pb-10" style="margin-right: 0;margin-left: 0">
            <h2 class="w100 tc">用户管理</h2>
        </div>
        <hr class="layui-bg-blue pt-5">
        <div class="backend-content">
            <table class="layui-table">
                <colgroup>
                    <col width="80">
                    <col width="200">
                    <col width="200">
                    <col width="200">
                </colgroup>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>用户名</th>
                    <th>权限</th>
                    <th>注册时间</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(function (user, index) { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <% if (user.role === 1) { %>
                        <span>普通用户</span>
                        <% } %>
                        <% if (user.role === 7) { %>
                        <span>超级管理员</span>
                        <% } %>
                    </td>
                    <td>
                        <%= moment(user.meta.createAt).format("YYYY-MM-DD") %>
                    </td>
                    <td>
                        <% if (user._id == localUser._id) { %>
                        <button disabled="disabled" class="user-del layui-btn layui-btn-danger layui-btn-disabled"
                                data-id="<%= user._id %>">删除<i class="layui-icon layui-icon-delete" style="position: relative;top: 1px"></i>
                        </button>
                        <% } %>
                        <% if (user._id != localUser._id) { %>
                        <button class="user-del layui-btn layui-btn-danger"
                                data-id="<%= user._id %>">删除<i class="layui-icon layui-icon-delete" style="position: relative;top: 1px"></i>
                        </button>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		layer.config({
			title: '提示'
		})
		$('.user-del').bind('click', function () {
			let userId = $(this).data("id");
			let tr = $(this).parents("tr");
			if (userId) {
				layer.confirm("确定删除该用户?删除后将不能恢复", {
					btn: ['确认', '取消'],
					btn1: function (index) {
						$.ajax({
							type: 'DELETE',
							url: '/admin/userList/del?userId=' + userId
						}).done(function (res) {
							if (res.success === 1) {
								tr.remove();
							} else {
								layer.alert("删除失败，请重试！")
							}
							layer.close(index);
						})
					},
					btn2: function (index) {
						layer.close(index)
					}
				})
			}
		})
	})
</script>
</body>