<!-- wrapper-box start -->
<div class="wrapper-box p-0">
    <!-- page-title-area start -->
    <div class="page-title-area pt-210 pb-210"
         data-background="https://nmist.oss-cn-hangzhou.aliyuncs.com/img/bg/page-title.jpg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page-title text-center">
                        <h1><%= product.cnName %></h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <% if (product.summary) { %>
                                <li class="breadcrumb-item">
                                    平台概述
                                </li>
                                <% } %>
                                <% if (product.character) { %>
                                <li class="breadcrumb-item">
                                    平台构成
                                </li>
                                <% } %>
                                <% if (product.advantage) { %>
                                <li class="breadcrumb-item">
                                    平台优势
                                </li>
                                <% } %>
                                <% if (product.training) { %>
                                <li class="breadcrumb-item">
                                    平台培训
                                </li>
                                <% } %>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->

    <div class="promotion-area mt-50">
        <div class="container gray-bg">
            <div class="pt-15 pb-15 blog-post-items">
                <div class="blog-wrapper mb-40">
                    <div class="card-title mt-30 mb-30">
                        <h3>
                            <span class="lnr lnr-pointer-right"></span>
                            <span>平台概述</span>
                        </h3>
                    </div>
                    <div class="blog-content mb-30">
                        <ul class="list-group">
                            <% if (product.summary.split("&&").length <= 1) { %>
                            <% product.summary.split("||").forEach(function (item, index) { %>
                            <li class="list-group-item">
                                <%= item %>
                            </li>
                            <% }) %>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container gray-bg">
            <div class="pt-15 pb-15 blog-post-items">
                <div class="blog-wrapper mb-40">
                    <div class="card-title mt-30 mb-30">
                        <h3>
                            <span class="lnr lnr-pointer-right"></span>
                            <span>平台构成</span>
                        </h3>
                    </div>
                    <div class="blog-content mb-30">
                        <% if (product.character.split("&&").length <= 1) { %>
                        <ul class="list-group">
                            <% product.character.split("||").forEach(function (item, index) { %>
                            <li class="list-group-item">
                                <%= item %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>

                        <% if (product.character.split("&&").length > 1) { %>
                        <% product.character.split("&&").forEach(function (item, index) { %>
                        <div class="panel-group" id="accordion<%= index + 1 %>" role="tablist"
                             aria-multiselectable="true">
                            <div class="panel panel-default mb-25">
                                <div class="panel-heading" role="tab" id="heading<%= index + 1 %>">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion<%= index + 1 %>"
                                           href="#collapse<%= index + 1 %>"
                                           aria-expanded="true" aria-controls="collapse<%= index + 1 %>">
                                            <h5>
                                                <span class="lnr lnr-list"></span>
                                                <%= item.split("=")[0] %>
                                            </h5>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse<%= index + 1 %>" class="panel-collapse collapse in" role="tabpanel"
                                     aria-labelledby="heading<%= index + 1 %>">
                                    <div class="panel-body">
                                        <ul class="list-group">
                                            <% item.split("=")[1].split("||").forEach(function (_item, _index) { %>
                                            <li class="list-group-item">
                                                <%= _item %>
                                            </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="container gray-bg">
            <div class="pt-15 pb-15 blog-post-items">
                <div class="blog-wrapper mb-40">
                    <div class="card-title mt-30 mb-30">
                        <h3>
                            <span class="lnr lnr-pointer-right"></span>
                            <span>平台优势</span>
                        </h3>
                    </div>
                    <div class="blog-content mb-30">
                        <% if (product.advantage.split("&&").length <= 1) { %>
                        <ul class="list-group">
                            <% product.advantage.split("||").forEach(function (item, index) { %>
                            <li class="list-group-item">
                                <%= item %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>

                        <% if (product.advantage.split("&&").length > 1) { %>
                        <% product.advantage.split("&&").forEach(function (item, index) { %>
                        <div class="panel-group" id="accordion_<%= index + 1 %>" role="tablist"
                             aria-multiselectable="true">
                            <div class="panel panel-default mb-25">
                                <div class="panel-heading" role="tab" id="heading_<%= index + 1 %>">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse"
                                           data-parent="#accordion_<%= index + 1 %>"
                                           href="#collapse_<%= index + 1 %>"
                                           aria-expanded="true" aria-controls="collapse_<%= index + 1 %>">
                                            <h5>
                                                <span class="lnr lnr-list"></span>
                                                <%= item.split("=")[0] %>
                                            </h5>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse_<%= index + 1 %>" class="panel-collapse collapse in" role="tabpanel"
                                     aria-labelledby="heading_<%= index + 1 %>">
                                    <div class="panel-body">
                                        <ul class="list-group">
                                            <% item.split("=")[1].split("||").forEach(function (_item, _index) { %>
                                            <% if (/https:\/\/nmist\.oss-cn-hangzhou\.aliyuncs\.com/.test(_item)) { %>
                                            <div class="col-lg-12 col-md-12 col-xl-12 flex-cc">
                                                <img src="<%= _item %>" alt="<%= _item %>" width="50%">
                                            </div>
                                            <% } else { %>
                                            <li class="list-group-item">
                                                <%= _item %>
                                            </li>
                                            <% } %>
                                            <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <% if (product.training) { %>
        <div class="container gray-bg">
            <div class="pt-15 pb-15 blog-post-items">
                <div class="blog-wrapper mb-40">
                    <div class="card-title mt-30 mb-30">
                        <h3>
                            <span class="lnr lnr-pointer-right"></span>
                            <span>平台培训</span>
                        </h3>
                    </div>
                    <div class="blog-content mb-30">
                        <ul class="list-group">
                            <% if (product.training.split("&&").length <= 1) { %>
                            <% product.training.split("||").forEach(function (item, index) { %>
                            <li class="list-group-item">
                                <%= item %>
                            </li>
                            <% }) %>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

    </div>
</div>